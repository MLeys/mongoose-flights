<%- include('../partials/header') %>

<h1>Flight Information</h1>

<section id="show-page">
    <div>Airline: </div>
    <div><%= flight.airline %></div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight #: </div>
    <div><%= flight.flightNo %></div>
    <div>Time of Departure: </div>
    <div><%= flight.departs %></div>
    </section>

    <h2>Destinations</h2>
      <table>
        <thead>
          <tr>
            <th>Airport</th>
            <th>Est Arrival</th>
          </tr>
        </thead>
      <% if (flight.destinations.length) { %>
        <% flight.destinations.forEach(d => { %>
          <tr>
            <td>
              <%= d.airport %> 
            </td>
            <td>
              <% if (d.arrival) { %>
               <%= d.arrival %> 
              <% } else { %>
                Not Available
              <% }; %> 
            </td></tr>
    <% }) %>

      <% } else  { %>
      <h5>No Desinations</h5>
      <% } %>
      </ul>
      </table>
</section>

<h2>Tickets</h2>

<% if (tickets.length) { %>
  <table>
    <thead>
      <tr>
        <th>Seat</th>
        <th>Price</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% let total=0 %>
        <% tickets.forEach(function(ticket) { %>
          <% total ++ %>
          <% if (ticket.flight = flight) { %> 
            <tr>
              <td>
                <%= ticket.seat %>
              </td>
              <td>
                <%= ticket.price %>
              </td>
              <td>
                <form action="/tickets/<%= ticket.id %>?_method=DELETE"
                  class="delete-form" method="POST">
                  <button type="submit">X</button>
                </form>  
              </td>
            </tr>
            <% } %> 
        <% }); %>
                <tr>
                  <td colspan="2"> <strong>
                   Total:  <%= (total ).toFixed(1) %>
                  </strong></td>
            
                </tr>
             
    </tbody>
  </table>
  <% } else { %>
    <h5>No Tickets Yet</h5>
    <% } %>


<a class="button" href="/flights/<%= flight._id %>/tickets/new">Buy Tickets</a>  



  <br><br><h2>Add Destination</h2>
  <form id="add-review-form" method="POST"
    action="/flights/<%= flight._id %>/destinations">
    <label>Destinations:</label>
  
        <select name="airport">
            <option value="AUS">AUS</option>
            <option value="DFW">DFW</option>
            <option value="DEN">DEN</option>
            <option value="LAX">LAX</option>
            <option value="SAN">SAN</option>
        </select>
    <label>Arrival Time:
      <input type="datetime-local" name="arrival" value="<% flight.arrival %>">
        
    </label><br>
    <input type="submit" value="Add Destination">
  </form>


<%- include('../partials/footer') %>